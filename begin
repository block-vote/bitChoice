   function lMix(iArray){
      for (var ib = iArray.length - 1; ib > 0; ib-- ){
        var jRand = Math.floor(Math.random() * (ib + 1));
        var iTemp = iArray[ib];
        iArray[ib] = iArray[jRand];
        iArray[jRand] = iTemp;
      }
  }

